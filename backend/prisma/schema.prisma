generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snowflake {
  id         String   @id @default(cuid())
  x          Float    @default(0)
  y          Float    @default(0)
  rotation   Float    @default(0)
  scale      Float    @default(1)
  pattern    String   @default("custom")
  imageData  String?
  fallSpeed  Float?
  driftSpeed Float?
  driftPhase Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model UserSession {
  id        String   @id @default(cuid())
  sessionId String
  userAgent String?
  ipAddress String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sessionId, date])
  @@index([date])
  @@index([sessionId])
}